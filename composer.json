{
    "autoload": {
        "psr-4": {
            "Things\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Things\\": ["tests/"]
        }
    },
    "require": {
        "php": "^7.0",
        "beberlei/assert": "@stable",
        "ramsey/uuid": "^3.5",
        "slim/slim": "^3.0",
        "vlucas/phpdotenv": "^2.4",
        "bugsnag/bugsnag": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "symfony/var-dumper": "^3.1",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "doc": "phpdoc  run -d ./src -t ./docs/api",
        "test": "phpunit",
        "psr2": "phpcs --standard=psr2 src/"
    }
}
